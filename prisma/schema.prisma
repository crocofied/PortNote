generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Server {
  id        Int         @id @default(autoincrement())
  name      String
  ip        String
  host      Int?         
}

model Port {
  id        Int         @id @default(autoincrement())
  serverId  Int
  note      String?
  port      Int
}

model Scan {
  id        Int         @id @default(autoincrement())
  serverId  Int
}